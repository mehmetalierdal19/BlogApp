@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Comments</h4>

    @if (Model == null || !Model.Any())
    {
        <div class="media mt-3">
            <p>
                Bu blogda henüz yorum yapılmadi. Ilk yorumu siz yapin!
            </p>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media mt-3">
                <a class="d-flex pr-3" href="#">
                    <img src="/CoreBlogTema/web/images/t2.jpg" alt="" class="img-fluid" />
                </a>
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>

        }
    }

</div>