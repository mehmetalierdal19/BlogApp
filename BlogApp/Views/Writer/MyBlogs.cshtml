@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "MyBlogs";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">My Blogs</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Create Date</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BlogID</td>
                            <td>@item.Title</td>
                            <td>@item.CreateDate.Day.@item.CreateDate.Month.@item.CreateDate.Year</td>
                            <td>@item.CategoryID</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Passive</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm">Delete</a>
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm">Update</a>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
</div>

